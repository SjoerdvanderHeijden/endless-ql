stylesheet taxOfficeExample {
    default boolean widget radio

    page Personalia {
        section "Personalia" {
            question name
            question age
            question grade
        }
    }

    page Housing {
        section "Buying" {
            question hasBoughtHouse
            widget checkbox
        }

        section "Loaning" {
            question hasMaintLoan
        }
    }

    page Selling {
        section "Selling" {
            question hasSoldHouse
            widget dropdown
        }

        section "You sold a house" {
            question sellingDate
            question sellingPrice
            question privateDebt
            question valueResidue style {
                fonttype: "monospaced"
                fontstyle: "italic"
                fontcolor: "#669999"
                widgetcolor: "#9933ff"
            }
        }
    }
}

