<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.141"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.uva.sea.gui.FormController">
    <padding>
        <Insets bottom="40" left="40" right="40" top="40"/>
    </padding>

    <ScrollPane prefHeight="300.0" prefWidth="400.0" GridPane.hgrow="ALWAYS" GridPane.rowIndex="0"
                GridPane.vgrow="ALWAYS">
        <VBox fx:id="container" prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="1"/>
    </ScrollPane>
    <ScrollPane prefHeight="100.0" prefWidth="400.0" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1"
                GridPane.vgrow="ALWAYS">
        <VBox fx:id="messages" prefHeight="50.0" prefWidth="200.0" GridPane.rowIndex="1">
        </VBox>
    </ScrollPane>
    <GridPane GridPane.rowIndex="3">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <Button alignment="CENTER_RIGHT" contentDisplay="CENTER" onAction="#loadQLFile"
                text="Load QL"/>
        <Button alignment="CENTER_RIGHT" contentDisplay="CENTER" onAction="#loadQLSFile"
                text="Load QLS" GridPane.columnIndex="1"/>
        <Button alignment="CENTER_RIGHT" onAction="#export" text="Export" GridPane.columnIndex="2"/>

    </GridPane>
    <columnConstraints>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
    </rowConstraints>
    <columnConstraints>
        <ColumnConstraints/>
        <ColumnConstraints/>
        <ColumnConstraints/>
        <ColumnConstraints/>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
    </rowConstraints>
</GridPane>
