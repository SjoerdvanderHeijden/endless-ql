stylesheet simpleForm
{
  page Numbers
  {
    section "Integer"
    {
      question someInteger
        widget spinbox
    }
    section "Decimal"
    {
      question someDecimal
        widget slider
      question someMoney
      default money widget textbox
    }
  }

  page Others
  {
    section "String, date and boolean"
    {
      question someString
      section "Date"
      {
        question someDate
      }
      section "Boolean"
      {
        question someBoolean
      }
    }
    default boolean widget radio("Yes", "No")
  }
}