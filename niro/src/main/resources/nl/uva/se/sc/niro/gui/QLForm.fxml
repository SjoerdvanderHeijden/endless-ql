<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <VBox fx:id="topBox" alignment="CENTER" BorderPane.alignment="CENTER">
            <Label fx:id="formName" contentDisplay="CENTER" text="FormName" textAlignment="CENTER" BorderPane.alignment="CENTER">
                <font>
                    <Font name="System Bold" size="24.0"/>
                </font>
            </Label>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </BorderPane.margin>
            <padding>
                <Insets bottom="10.0" top="5.0"/>
            </padding>
        </VBox>
    </top>
    <center>
        <ScrollPane fx:id="questionArea" />
    </center>
    <bottom>
        <VBox>
            <HBox prefWidth="200.0" spacing="10.0" BorderPane.alignment="CENTER">
                <Button mnemonicParsing="false" onAction="#quitApplication" text="Quit"/>
                <Button mnemonicParsing="false" onAction="#cancel" text="Cancel"/>
                <Button mnemonicParsing="false" onAction="#saveData" text="Save"/>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
